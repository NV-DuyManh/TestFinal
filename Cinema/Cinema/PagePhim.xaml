<Page x:Class="Cinema.PagePhim"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cinema"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="580"
      Title="PagePhim" Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="DANH SÁCH PHIM" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <Button Content="➕ Thêm mới" Width="90" Height="30" Margin="5,0" Background="#27ae60" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="BtnThemMoi_Click"/>
            <Button Content="✏️ Sửa" Width="70" Height="30" Margin="5,0" Background="#f39c12" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="BtnSua_Click"/>
            <Button Content="❌ Xóa" Width="70" Height="30" Margin="5,0" Background="#e74c3c" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="BtnXoa_Click"/>
        </StackPanel>

        <DataGrid x:Name="dgPhim" Grid.Row="1" 
                  AutoGenerateColumns="True" 
                  IsReadOnly="True" 
                  AlternatingRowBackground="#F2F6F8"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"/>
    </Grid>
</Page>