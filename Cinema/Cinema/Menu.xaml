<Window x:Class="Cinema.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý rạp phim"
        Height="500"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F9">

    <Grid>

        <!-- ================= STYLE ================= -->
        <Grid.Resources>

            <!-- MENU CARD BUTTON -->
            <Style x:Key="SideMenuCard" TargetType="Button">

                <Setter Property="Height" Value="50"/>
                <Setter Property="Margin" Value="12,8"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="#2C3E50"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Padding" Value="15,0"/>
                <Setter Property="Cursor" Value="Hand"/>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8">

                                <ContentPresenter
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Margin="5,0"/>

                            </Border>

                            <ControlTemplate.Triggers>

                                <!-- Hover -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd"
                                            Property="Background"
                                            Value="#ECF0F1"/>
                                </Trigger>

                                <!-- Click -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="bd"
                                            Property="Background"
                                            Value="#D6DBDF"/>
                                </Trigger>

                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

            </Style>

        </Grid.Resources>


        <!-- ================= LAYOUT ================= -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <!-- ================= SIDEBAR ================= -->
        <Border Background="#2C3E50"
                Grid.Column="0">

            <StackPanel>

                <TextBlock Text="🎬 QUẢN LÝ RẠP PHIM"
                           Foreground="White"
                           FontSize="17"
                           FontWeight="Bold"
                           Margin="15"
                           TextWrapping="Wrap"/>

                <!-- MENU -->
                <Button Style="{StaticResource SideMenuCard}"
                        Content="🎬  Quản lý phim"
                        Click="BtnPhim_Click"/>

                <Button Style="{StaticResource SideMenuCard}"
                        Content="🍿  Quản lý sản phẩm"
                        Click="BtnSanPham_Click"/>

                <Button Style="{StaticResource SideMenuCard}"
                        Content="🕒  Quản lý suất chiếu"
                        Click="BtnSuatChieu_Click"/>

                <!-- NEW -->
                <Button Style="{StaticResource SideMenuCard}"
                        Content="👤  Quản lý tài khoản"
                        Click="BtnTaiKhoan_Click"/>

            </StackPanel>

        </Border>


        <!-- ================= CONTENT ================= -->
        <Border Grid.Column="1"
                Background="White"
                Margin="10"
                CornerRadius="8"
                BorderBrush="#DDDDDD"
                BorderThickness="1">

            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"/>

        </Border>

    </Grid>
</Window>